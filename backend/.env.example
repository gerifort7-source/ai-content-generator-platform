# Application
NODE_ENV=development
PORT=5000

# Database
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ai_content_generator
DB_PORT=5432

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRE=7d

# AI Services
REPLICATE_API_KEY=your_replicate_api_key
PIKA_API_KEY=your_pika_api_key
RUNWAY_API_KEY=your_runway_api_key

# AWS S3 / File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=us-east-1

# Or use Yandex Object Storage
YANDEX_ACCESS_KEY=your_yandex_key
YANDEX_SECRET_KEY=your_yandex_secret
YANDEX_BUCKET=your_bucket
YANDEX_REGION=ru-central1

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# Rate Limiting
FREE_TIER_LIMIT=50
PREMIUM_TIER_LIMIT=500
RATE_LIMIT_WINDOW=86400

# Payment (optional)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
YOOMONEY_SHOP_ID=your_yoomoney_shop_id

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000
